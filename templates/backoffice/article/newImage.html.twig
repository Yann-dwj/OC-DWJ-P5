{% extends 'base.html.twig' %}

{% block title 'Creation d\'article | MonEcole' %}

{% block stylesheets %}<link rel="stylesheet" href="/css/backoffice.css">{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="container pt-4">
            <div class="row mb-2">
                <div class="col-md-12">
                    <h1 class="h3 mb-2 text-gray-800">Actualités</h1>
                </div>
                <div class="d-md-flex col-md-12 justify-content-between">
                    <div class="">
                        <span class="small font-italic"><a class="text-dark" href="{{ path('dashboard.index') }}"><i class="fas fa-home mr-1"></i>Tableau de bord</a></span>
                        <span class="small font-italic">/</span>
                        <span class="small font-italic"><a class="text-dark" href="{{ path('article.index') }}">Actualités</a></span>
                        <span class="small font-italic">/</span>
                        <span class="small font-italic">Ajouter un article</span>
                    </div>
                    <div class="">
                        <span class="h3 mb-0 text-right"><a class="returnLink" href="{{ path('article.index') }}"><i class="fas fa-long-arrow-alt-left fa-lg"></i></a></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="card mb-3">
                        <div class="card-header my-0" >
                            <div class="row">
                                <div class="col"> 
                                    <span class="h6 text-dark font-weight-bold">Article</span>
                                </div>
                            </div>
                        </div>
                        <div class="card-body bg-dark">
                            {{ form_start(form) }}
                                <div class="row">
                                    <div class="col-md-6 cream">
                                        {{ form_row(form.title) }}
                                    </div>
                                    <div class="col-md-6 cream">
                                        {{ form_row(form.category) }}
                                    </div>
                                </div>
                                <div class="row">                           
                                    <div class="col-md-12 cream">
                                        {{ form_row(form.content) }}
                                        {# {{ form_widget(form.content, {'attr': {'class': 'tinymce'}}) }} #}
                                    </div>
                                </div>
                                <div class="row">                           
                                    <div class="col-md-12 cream">
                                        {{ form_row(form.imageFile) }}
                                    </div>
                                </div>
                                {{ form_rest(form) }}
                                <div class="row mt-4 justify-content-center">
                                    <div class="col-md-12">
                                        <button class="buttonStyle btn btn-block font-weight-bold">Ajouter l'article</a>
                                    </div>
                                </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>         
        </div>
    </div>
{% endblock %}