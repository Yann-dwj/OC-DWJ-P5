{% extends 'base.html.twig' %}

{% block title 'Article | MonEcole' %}

{% block stylesheets %}<link rel="stylesheet" href="/css/backoffice.css">{% endblock %}

{% block body %}
    <div class="container my-5">
        <section class="mx-md-5 dark-grey-text">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-cascade wider reverse">
                        <div class="view view-cascade overlay">
                            {% if article.imagename %}
                                <div style="background-size: cover; background-position: center center; height: 300px; background-image: url({{ vich_uploader_asset(article, 'imageFile') }});"></div>
                            {% endif %}
                        </div>
                        <div class="card-body card-body-cascade text-center">
                            <h3 class="font-weight-bold"><a>{{ article.title }}</a></h3>
                            <p>Ã©crit par {{ article.classroom.teacher}}, le {{ article.createdAt | date('d/m/Y') }}</p>
                        </div>
                    </div>
                    <div class="mt-5">
                        {{ article.content }}
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}