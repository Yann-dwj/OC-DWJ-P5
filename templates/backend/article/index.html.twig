{% extends 'base.html.twig' %}

{% block title 'Gestion des articles | MonEcole' %}

{% block body %}
    <div class="container mt-4 mx-auto">

        <h1 class="">Gérer les articles</h1>

        {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
        {% endfor %}


        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Titre</th>
                    <th>Contenu</th>
                </tr>
            </thead>
            <tbody>
            {% for article in articles %}
                <tr>
                    <td>{{ article.title }}</td>
                    <td>
                        <a href="{{ path('admin.article.edit', {id: article.id}) }}" class="btn btn-secondary">Éditer</a>
                        <form method="post" action="{{ path('admin.article.delete', {id: article.id}) }}" style="display: inline-block;" onsubmit="return confirm('Êtes vous sur de supprimer cet article ?')">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
                            <button class="btn btn-danger">Supprimer</button>
                        </form>
                    </td>
                    <td></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="text-right">
            <a href="{{ path('admin.article.new') }}" class="btn btn-primary">Ajouter un article</a>
        </div>

    </div>
{% endblock %}