{% extends 'base.html.twig' %}

{% block title 'Carnets de liaisons | MonEcole' %}

{% block body %}
    <div class="container-fluid">
        <div class="container pt-4">
            <div class="row mb-2">
                <div class="col-md-12">
                    <h1 class="h3 mb-2 text-gray-800">Carnets de liaisons</h1>
                </div>
                <div class="d-md-flex col-md-12 justify-content-between">
                    <div class="">
                        <span class="small font-italic"><a class="text-dark" href="{{ path('dashboard.index') }}"><i class="fas fa-home mr-1"></i>Tableau de bord</a></span>
                        <span class="small font-italic">/</span>
                        <span class="small font-italic">Carnets de liaisons</span>
                    </div>
                    <div class="">
                        <span class="h3 mb-0 text-right"><a class="returnLink" href="{{ path('dashboard.index') }}"><i class="fas fa-long-arrow-alt-left fa-lg"></i></a></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="card mb-3">
                        <div class="card-header my-0" style="background-color: #f8f9fc;">
                            <div class="row">
                                <div class="col"> 
                                    <span class="h6 text-dark font-weight-bold">Élèves</span>
                                </div>
                            </div>
                        </div>
                        <div class="card-body bg-dark">
                            <table class="table table-bordered table-hover table-dark text-white">
                                <thead>
                                    <tr>
                                        <th class="cream">#</th>
                                        <th class="cream">Nom</th>
                                        <th class="cream">Prénom</th>
                                        <th class="cream">Mots</th>
                                        <th class="cream">E-mail</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for student in students %}
                                    <tr onclick="document.location='{{ path('teacher.liaison.show', {id: student.id}) }}'">
                                        <td>{{ loop.index }}</td>
                                        <td>{{ student.lastname }}</td>
                                        <td>{{ student.firstname }}</td>
                                        <td> {{ numberOfMessages }} </td>
                                        <td>{{ student.email }}</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>         
        </div>
    </div>
{% endblock %}