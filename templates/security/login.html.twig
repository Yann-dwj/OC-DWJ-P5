{% extends 'base.html.twig' %}

{% block title 'Se connecter | MonEcole' %}

{% block stylesheets %}
    <link rel="stylesheet" href="/css/login.css">
{% endblock %}

{% block body %}
    <div class="container-fluid pt-5">
        <div class="container pt-4">

            {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey }}
            </div>
            {% endif %}

            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card mb-3">
                        <div class="card-header my-0" style="background-color: #f8f9fc;">
                            <div class="row">
                                <div class="col"> 
                                    <h1 class="h6 text-dark font-weight-bold">Connexion</h3>
                                </div>
                            </div>
                        </div>
                        <div class="card-body bg-dark">
                            <form action="{{ path('login') }}" method="post">
                                <div class="row justify-content-center">
                                    <div class="form-group cream col-md-8">
                                        <label for="email">Email</label>
                                        <input type="email" id="email" name="email" class="form-control" value="{{ last_username }}">
                                    </div>
                                </div>
                                <div class="row justify-content-center">
                                    <div class="form-group cream col-md-8">
                                        <label for="password">Mot de passe</label>
                                        <input type="password" id="password" name="password" class="form-control">
                                    </div>
                                </div>
                                <div class="row mt-4 justify-content-center">
                                    <div class="col-md-8 mb-2">
                                        <input type="hidden" id="" name="_csrf_token" class="form-control" value="{{ csrf_token('authenticate') }}">
                                        <button type="submit" class="btn btn-block buttonStyle font-weight-bold">Se connecter<i class="fas fa-sign-in-alt ml-1"></i></button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center pt-5">
                <a href="/" class="font-weight-bold">Revenir sur la page d'accueil</div>
            </div>    
        </div>
    </div>
{% endblock %}