{% extends 'base.html.twig' %}

{% block title 'Se connecter | MonEcole' %}

{% block body %}
<style>
body
{
    background-color: #edeef2;
}
.cream
{
    color: #d2c5b4;
}
button, .buttonStyle
{
    color: white !important;
    background-color: #343a40 !important;
    border: solid 3px #d2c5b4 !important;
}
.buttonStyle:hover
{
    color: #343a40 !important;
    background-color: #f8f9fc !important;
    border: solid 3px #f8f9fc !important;
}
</style>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="{{ path('home') }}">Mon Ecole</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('home') }}#news">Actualit√©s</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('home') }}#about">A propos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('home') }}#contact">Contact</a>
                </li>
            </ul>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="btn btn-outline-light" href="{{ path('login') }}" role="button">Se connecter</a>
                </li>  
            </ul>
        </div>
    </nav>

    <div class="container-fluid pt-5">
        <div class="container pt-4">

            {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey }}
            </div>
            {% endif %}

            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card mb-3">
                        <div class="card-header my-0" style="background-color: #f8f9fc;">
                            <div class="row">
                                <div class="col"> 
                                    <h1 class="h6 text-dark font-weight-bold">Connexion</h3>
                                </div>
                            </div>
                        </div>
                        <div class="card-body bg-dark">
                            <form action="{{ path('login') }}" method="post">
                                <div class="row justify-content-center">
                                    <div class="form-group cream col-md-8">
                                        <label for="email">Email</label>
                                        <input type="email" id="email" name="email" class="form-control" value="{{ last_username }}">
                                    </div>
                                </div>
                                <div class="row justify-content-center">
                                    <div class="form-group cream col-md-8">
                                        <label for="password">Mot de passe</label>
                                        <input type="password" id="password" name="password" class="form-control">
                                    </div>
                                </div>
                                <div class="row mt-4 justify-content-center">
                                    <div class="col-md-8 mb-2">
                                        <input type="hidden" id="" name="_csrf_token" class="form-control" value="{{ csrf_token('authenticate') }}">
                                        <button type="submit" class="btn btn-block buttonStyle font-weight-bold">Se connecter<i class="fas fa-sign-in-alt ml-1"></i></button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>         
        </div>
    </div>
{% endblock %}