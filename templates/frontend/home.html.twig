{% extends 'base.html.twig' %}

{% block title 'Accueil | MonEcole' %}

{% block body %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="{{ path('home') }}">Mon Ecole</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('home') }}#news">Actualit√©s</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('home') }}#about">A propos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('home') }}#contact">Contact</a>
                </li>
            </ul>
            <ul class="navbar-nav">
                <li class="nav-item">
                    {% if app.user %}
                        {% if is_granted('ROLE_ADMIN') %}
                        <a class="btn" href="{{ path('admin.index') }}" role="button">
                            <i class="fas fa-user text-white fa-lg pr-2"></i>
                        </a>
                        {% elseif is_granted('ROLE_TEACHER') %}
                        <a class="btn" href="{{ path('teacher.index') }}" role="button">
                            <i class="fas fa-user text-white fa-lg pr-2"></i>
                        </a>
                        {% elseif is_granted('ROLE_USER') %}
                        <a class="btn" href="{{ path('user.index') }}" role="button">
                            <i class="fas fa-user text-white fa-lg pr-2"></i>
                        </a>
                        {% endif %}
                    <a class="btn btn-outline-light" href="{{ path('logout') }}" role="button">Se deconnecter</a>
                    {% else %}
                    <a class="btn btn-outline-light" href="{{ path('login') }}" role="button">Se connecter</a>
                    {% endif %}
                </li>  
            </ul>
        </div>
    </nav>

    <div id="" class="d-flex align-content-center flex-wrap" style="background-color: lightgrey; height: 600px;">
        <h1 class="mx-auto">Bienvenue sur la page d'accueil</h1>
    </div>

<style type="text/css">

.carousel-control-prev-icon
{
    background-image: url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' fill='%23000' viewBox='0 0 8 8'%3E%3Cpath d='M5.25 0l-4 4 4 4 1.5-1.5-2.5-2.5 2.5-2.5-1.5-1.5z'/%3E%3C/svg%3E") !important;
}

.carousel-control-next-icon
{
    background-image: url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' fill='%23000' viewBox='0 0 8 8'%3E%3Cpath d='M2.75 0l-1.5 1.5 2.5 2.5-2.5 2.5 1.5 1.5 4-4-4-4z'/%3E%3C/svg%3E") !important;
}

.carousel-indicators li
{
    background-color: black !important;
}

</style>

    <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel" data-interval="300000" data-pause="false">
        <ol class="carousel-indicators" data-keyboard="true">
            {% for article in articles %}
            <li data-target="#carouselExampleCaptions" data-slide-to="{{ loop.index0 }}" class="{{ loop.index is same as(1) ? "active" : ""  }}"</li>
            {% endfor %}
        </ol>
        <div class="carousel-inner" id="news">
            {% for article in articles %}
            <div class="carousel-item {{ loop.index is same as(1) ? "active" : ""  }}">
                <div class="d-block w-100 my-auto" style="background-color: white;">
                    <div class="container-fluid my-auto">
                        <div class="col-md-10 mx-auto my-5">
                            <div class="card" style="height: 500px;">
                                <h5 class="card-header text-center">Tableau d'informations</h5>
                                <div class="card-body text-white" style="background-color: #5A5E6B; border: solid 6px #E0CDA9">
                                    <div class="d-flex justify-content-between px-2">
                                        <p class="" style="color: rgba(255,255,255, 0.3);">le {{ article.createdAt | date('d/m/Y') }}</p>
                                        <p class="" style="color: rgba(255,255,255, 0.3);">{{ article.categoryType }}</p>
                                    </div>
                                    <h4 class="text-center pb-5">{{ article.title }}</h4>
                                    <p class="card-text text-center">{{ article.content }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
        <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true" style="color: grey!important;"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div id="about" class="d-flex align-content-center flex-wrap" style="background-color: lightgrey; height: 600px;">
        <h2 class="mx-auto">A PROPOS</h2>
    </div>

    <div id="contact" class="d-flex align-content-center flex-wrap" style="background-color: white; height: 600px;">
        <h2 class="mx-auto">CONTACT</h2>
    </div>
{% endblock %}