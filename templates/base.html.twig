<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="{{ path('home') }}">Mon Ecole</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('home') }}#news">Actualit√©s</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('home') }}#about">A propos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('home') }}#contact">Contact</a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        {% if app.user %}
                            {% if is_granted('ROLE_ADMIN') %}
                            <a class="btn" href="{{ path('admin.index') }}" role="button">
                                <i class="fas fa-user text-white fa-lg pr-2"></i>
                            </a>
                            {% elseif is_granted('ROLE_TEACHER') %}
                            <a class="btn" href="{{ path('teacher.index') }}" role="button">
                                <i class="fas fa-user text-white fa-lg pr-2"></i>
                            </a>
                            {% elseif is_granted('ROLE_USER') %}
                            <a class="btn" href="{{ path('user.index') }}" role="button">
                                <i class="fas fa-user text-white fa-lg pr-2"></i>
                            </a>
                            {% endif %}
                        <a class="btn btn-outline-light" href="{{ path('logout') }}" role="button">Se deconnecter</a>
                        {% else %}
                        <a class="btn btn-outline-light" href="{{ path('login') }}" role="button">Se connecter</a>
                        {% endif %}
                    </li>  
                </ul>
            </div>
        </nav>

        {% if is_granted('ROLE_ADMIN') and app.request.requestUri != '/' %}
        <ul class="nav justify-content-center bg-primary sticky-top">
            <li class="nav-item">
                <a class="nav-link text-white px-5 active" href="{{ path('admin.index') }}">
                    <i class="fas fa-home px-2"></i>
                    Accueil
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white px-5" href="{{ path('admin.article.index') }}">
                    <i class="fas fa-align-left px-2"></i>
                    Article
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white px-5" href="{{ path('admin.user.index') }}">
                    <i class="fas fa-user-cog px-2"></i>
                    Utilisateur
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white px-5" href="{{ path('admin.index') }}">
                    <i class="fas fa-envelope px-2"></i>
                    Messagerie
                </a>
            </li>
        </ul>
        {% endif %}

        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
        <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    </body>
</html>
